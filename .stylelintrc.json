{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order"
  ],
  "ignoreFiles": [
    "**/node_modules/**"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "overrides": [
    {
      "files": [
        "**/*.{jsx,tsx}"
      ],
      "customSyntax": "postcss-jsx",
      "rules": {
        "value-keyword-case": null
      }
    },
    {
      "files": [
        "**/*.html"
      ],
      "customSyntax": "postcss-html",
      "rules": {
        "value-keyword-case": null
      }
    }
  ]
}
